$main-color: pink;
$main-font: 'Pacifico', cursive;

h1 {
  font-family: $main-font;
}

.index {
  background-image: url(<%=asset_path 'cooking_index.jpeg'%>);
  background-position: fixed;
  background-repeat: no-repeat;
  h1 {
    color: white;
  }
}

.search-bar {
margin: 0;
position: absolute;
top: 50%;
left: 50%;
margin-right: -50%;
transform: translate(-50%, -50%);
}

.recipes-header {
  color: $main-color;
  text-align:center;
  padding: 3%;
}

.recipe{
  li {
    font-family: 'Nunito Sans', sans-serif;
    list-style: none;
  }
}

.recipe-header {
  text-align:center;
  color: $main-color;
  padding: 3%;
}

h3 {
  font-family: $main-font;
  color:pink;
}

.page {
  text-align: center;
  padding: 3%;
  a {
    margin: 5%;
  }
}

.recipe-title {
  font-family: $main-font;
  color: $main-color;
  &:hover {
    color: darken($main-color, 5%);
  }

}
