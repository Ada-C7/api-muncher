$main-color: white;
$main-font: 'Amatic SC', cursive;

h1 {
  font-family: $main-font;
}

p {
  color: $main-color;
}

.index {
  background-image: url(<%=asset_path 'cooking_index.jpeg'%>);
  background-position: fixed;
  background-repeat: no-repeat;
  h1 {
    color: $main-color;
  }
}

.search-bar {
margin: 0;
position: absolute;
top: 50%;
left: 50%;
margin-right: -50%;
transform: translate(-50%, -50%);
}

.recipes-header {
  color: $main-color;
  text-align:center;
  padding: 3%;
}

.recipe{
  li {
    font-family: 'Nunito Sans', sans-serif;
    list-style: none;
  }
  h3 {
    white-space:nowrap;
    overflow:hidden;
  }
}

.recipe-header {
  text-align:center;
  color: $main-color;
  padding: 3%;

}

h3 {
  font-family: $main-font;
  color:$main-color;
}

.page {
  text-align: center;
  padding: 3%;
  a {
    margin: 5%;
    font-family: $main-font;
    color: $main-color;
    font-size: 2.0em;
  }
}

.recipe-title {
  font-family: $main-font;
  color: $main-color;
  &:hover {
    color: darken($main-color, 5%);
  }

}

.results {
  background-image: url(<%=asset_path 'results_page.jpeg'%>);
  background-position: fixed;
  background-repeat: no-repeat;
}

.show-page {
  background-image: url(<%=asset_path 'results_page.jpeg'%>);
  background-position: fixed;
  background-repeat: no-repeat;
}
