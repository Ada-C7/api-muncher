@import url('https://fonts.googleapis.com/css?family=Cookie|Tangerine');

header {
  background-color: white;
  opacity: .5;
  position: fixed;
  width: 100%;
  height: 100px;
  top: 0;
  margin-left: none;
  text-align: center;
  font-family: 'Tangerine', cursive;
  font-size: 100px;
}

body {
  margin-top: 300px;
  background-image: url(<%= asset_path 'spices.jpeg' %>);
  background-size: cover;
  align: center;
}

.form {
   display: block;
   text-align: center;
   width: 500px;
   margin-left: 450px;
   margin-right: 300px;
}

p, h1 {
  color: white;
  font-family: 'Tangerine', cursive;
  font-size: 3rem;
}

h1 {
  font-size: 6rem;
  margin-left: 2rem;
}

.recipes {
  background-color: white;
  opacity: .9;
  margin: 2rem;
}

.name {
  font-family: 'Tangerine', cursive;
  font-size: 2rem;
}

.name a {
  color: black;
}

#recipe-show-name {
  text-align: center;
  font-size: 8rem;
}
