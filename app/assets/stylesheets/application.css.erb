h2 {
  padding-left: 5%;
}

body {
  font-family: 'Merriweather', serif;
  background-image: url(<%= asset_path 'images.jpeg'%>);
  background-size: 180%;
  background-color: orange;
}

.img {
  text-align: center;
  padding-bottom: 5%;
}
.search-form {
  text-align: center;
  margin: 6% auto 25% auto;
  padding: 2%;
  background-color: rgba(255, 255, 255, 0.85);
  width: 60%;
}


footer {
  background-color: rgba(255, 255, 255, 0.8);
  display: block;
  width: 100%;
  margin-top: 5vh;
  color: black;
  vertical-align: middle;
  font-weight: 200;
  text-align: center;
  position: absolute;;
  bottom: 0px;
  clear: both;
  height: 50px;
}

footer p {
  display: inline-block;
  padding-top: 0.5%;
  letter-spacing: 1px;
}

footer p:first-of-type {margin-left: 2%; margin-right: 40%;}

footer p {
  display: inline-block;
  padding-top: 0.2%;
  font-size: 0.7rem;
}

.next-and-before {
  text-align: center;
}

.next-and-before h3 {
  display: inline-block;
}

footer p:nth-child(2) {
  font-size: 1.2rem;
}
