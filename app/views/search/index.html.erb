<h3> You asked for <em class="query"><%=params[:query]%></em>, here it is....</h3>

<nav id="arrows">
  <% query = params[:query]%>
  <%from = @search.from.to_i + 10%>

  <%if @search.from.to_i > 1%>
  <%back = @search.from.to_i - 10%>
  <%=link_to "<<--", searches_path( "query"=> query, "from"=> back) %>
  <%end%>

  <%=link_to "-->>", searches_path( "query"=> query, "from"=> from) %>
</nav>

<section class="search_results">

  <%@searches.each do |key, recipe|%>
  <section class= "search_result columns small-12 medium-3 large-4">


      <%=link_to recipe["label"], search_path( key, "uri" => recipe["uri"], "from"=> from), class:"index_link" %>

  </section>

  <section="search_img">
  <%=image_tag src="#{recipe["image"]}", class:"index_photo"%>
  </section>
