<h3 class="center white"><%= @count %> results for your search for <%= params[:q] %> <%= params[:id] %> recipes</h3>
<div class="row white">
  <%  @recipes.each do |recipe| %>
  <div class="small-12 end medium-6 large-4 columns ">
    <%= image_tag(recipe.image, :alt => recipe.label) %>
    <p>
      <%= link_to recipe.label, recipe_path(recipe.id) %>
    </p>
  </div>
  <% end %>
</div>

<footer class="white center">
  <div>
    Powered by Edamam
  </div>
  <div>
    Googly Eyes: Pen <a href="https://codepen.io/loktar00/pen/FmkAd">Loktar</a>
  </div>
</footer>
