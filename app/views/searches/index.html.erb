<%= form_tag(root_path, :method => "get") do %>
<%= text_field_tag :search_item, params[:search_item], placeholder: "Search Recipes" %>
<%= submit_tag "Search", :name => nil %>
<% end %>

<div class="row small-up-1 medium-up-2 large-up-5">
  <% @all_search_results.each do |result| %>
  <div class="column">
    <%= image_tag result["recipe"]["image"] %>
    <%= link_to result["recipe"]["label"], show_path(uri: result["recipe"]["uri"]) %>
  </div>
  <% end %>
</div>

<%= will_paginate @posts, renderer: FoundationPagination::Rails %>
