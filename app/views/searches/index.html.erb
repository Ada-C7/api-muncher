<%= form_tag(root_path, :method => "get") do %>
<%= text_field_tag :search_item, params[:search_item], placeholder: "Search Recipes" %>
<%= submit_tag "Search", :name => nil %>
<% end %>

<% if @page_results %>
  <div class="row small-up-1 medium-up-2 large-up-5">
    <% @page_results.each do |result| %>
    <div class="column">
      <%= image_tag result.image %>
      <%= link_to result.recipe_label, show_path(uri: result.uri) %>
    </div>
    <% end %>
  </div>
  <%= will_paginate @page_results, page_links: false %>
<% end %>
