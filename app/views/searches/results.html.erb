<h3 class="center white"><%= @count %> results for your search for <%= params[:q] %> <%= params[:id] %> recipes</h3>
<h3 class="white center">Filter by diet </h3>
<div class="center">

<p class="label white">
  <%= link_to "low-carb", diet_path(params[:q], "Low-Carb") %>
</p>
<p class="label white">
  <%= link_to "high-protein", diet_path(params[:q], "High-Protein") %>
</p>

<p class="label white">
  <%= link_to "high-fiber", diet_path(params[:q], "High-Fiber") %>
</p>
<p class="label white">
  <%= link_to "low-fat", diet_path(params[:q], "Low-Fat") %>
</p>
<p class="label white">
  <%= link_to "low-sodium ", diet_path(params[:q], "Low-Sodium") %>
</p>
</div>



<div class="row white">
  <%  @recipes.each do |recipe| %>
  <div class="small-12 end medium-6 large-4 columns ">
    <%= image_tag(recipe.image, :alt => recipe.label) %>
    <p>
      <%= link_to recipe.label, recipe_path(recipe.id) %>
    </p>
  </div>
  <% end %>
</div>



<div class="center white">
  <%= will_paginate @recipes, class: "row" %>
</div>

<footer class="white center">
  <div>
    Powered by Edamam
  </div>
  <div>
    Googly Eyes: Pen <a href="https://codepen.io/loktar00/pen/FmkAd">Loktar</a>
  </div>
</footer>
