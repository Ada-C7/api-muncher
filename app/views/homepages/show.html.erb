<article class="show row">
  <h2 class="small-12 columns">
    <%= link_to @recipe.name, @recipe.url, target: :_blank %>
  </h2>
  <p>
    Recipe yields <%= @recipe.servings %> servings
  </p>

  <section class="ingredients small-12 medium-6 columns">
    <h3>Ingredients:</h3>
    <ul>
      <% @recipe.ingredients.each do |ingredient| %>
        <li>
          <%= ingredient %>
        </li>
      <% end %>
    </ul>
  </section>

  <div class="small-12 medium-6 columns">
    <%= image_tag @recipe.image %>
  </div>

  <section class="nutritional-info small-6 small-centered columns">
    <h4>Nutritional Info</h4>
      <ul>
        <li>
          Calories: <%= @recipe.nutritional_info["ENERC_KCAL"]["quantity"].round(2) %> grams
        </li>
        <li>
          Total Fat: <%= @recipe.nutritional_info["FAT"]["quantity"].round(2) %> grams
        </li>
        <li>
          Saturated Fat: <%= @recipe.nutritional_info["FASAT"]["quantity"].round(2) %> grams
        </li>
        <li>
          Trans Fat: <%= @recipe.nutritional_info["FATRN"]["quantity"].round(2) %> grams
        </li>
        <li>
          Sodium: <%= @recipe.nutritional_info["NA"]["quantity"].round(2) %> grams
        </li>
        <li>
          Carbohydrates: <%= @recipe.nutritional_info["CHOCDF"]["quantity"].round(2) %> grams
        </li>
        <li>
          Fiber: <%= @recipe.nutritional_info["FIBTG"]["quantity"].round(2) %> grams
        </li>
        <li>
          Sugar: <%= @recipe.nutritional_info["FIBTG"]["quantity"].round(2) %> grams
        </li>
        <li>
          Protein: <%= @recipe.nutritional_info["PROCNT"]["quantity"].round(2) %> grams
        </li>
      </ul>
    </section>

</article>
