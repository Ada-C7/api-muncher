<div class="row">
<article class="show small-10 small-centered columns">
  <h2 class="small-12 columns">
    <%= link_to @recipe.name, @recipe.url, target: :_blank %>
  </h2>

  <section class="ingredients small-12 medium-6 columns">
    <h3>Ingredients:</h3>
    <h4>
      Recipe yields <%= @recipe.servings %> servings
    </h4>
    <ul>
      <% @recipe.ingredients.each do |ingredient| %>
        <li>
          <%= ingredient %>
        </li>
      <% end %>
    </ul>
  </section>

  <div class="recipe-image small-12 medium-6 columns">
    <%= image_tag @recipe.image %>
  </div>

    <br />

  <section class="nutritional-info row">
    <h4 class="small-12 columns">Nutritional Info</h4>
      <div class="small-12 small-centered columns">
        <table>
          <tr>
            <th></th>
            <th>Per Serving</th>
            <th>Percent of Daily Value</th>
          </tr>
          <tr>
            <td>Calories</td>
            <td><%= @recipe.nutritional_info["ENERC_KCAL"]["quantity"].round(2) %></td>
            <td></td>
          </tr>
          <tr>
            <td>Total Fat</td>
            <td> <%= @recipe.nutritional_info["FAT"]["quantity"].round(1) %> grams</td>
            <td><%= @recipe.daily["FAT"]["quantity"].round(1) %>%</td>
          </tr>
            <td>Saturated Fat</td>
            <td> <%= @recipe.nutritional_info["FASAT"]["quantity"].round(1) %> grams</td>
            <td><%= @recipe.daily["FASAT"]["quantity"].round(1) %>%</td>
          </tr>
          </tr>
            <td>Trans Fat</td>
            <td> <%= @recipe.nutritional_info["FATRN"]["quantity"].round(1) %> grams</td>
            <td></td>
          </tr>
            <td>Sodium</td>
            <td><%= @recipe.nutritional_info["NA"]["quantity"].round(1) %> grams</td>
            <td><%= @recipe.daily["NA"]["quantity"].round(1) %>%</td>
          </tr>
          </tr>
            <td>Carbohydrates</td>
            <td><%= @recipe.nutritional_info["CHOCDF"]["quantity"].round(1) %> grams</td>
            <td><%= @recipe.daily["CHOCDF"]["quantity"].round(1) %>%</td>
          </tr>
          </tr>
            <td>Fiber</td>
            <td><%= @recipe.nutritional_info["FIBTG"]["quantity"].round(1) %> grams</td>
            <td><%= @recipe.daily["FIBTG"]["quantity"].round(1) %>%</td>
          </tr>
          </tr>
            <td>Sugar</td>
            <td><%= @recipe.nutritional_info["SUGAR"]["quantity"].round(1) %> grams</td>
            <td></td>
          </tr>
          </tr>
            <td>Protein</td>
            <td><%= @recipe.nutritional_info["PROCNT"]["quantity"].round(1) %> grams</td>
            <td><%= @recipe.daily["PROCNT"]["quantity"].round(1) %>%</td>
          </tr>
        </table>
      </div>
    </section>
</article>
</div>
