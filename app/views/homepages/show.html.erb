<div class="row">
<article class="show small-10 small-centered columns">
  <h2 class="small-12 columns">
    <%= link_to @recipe.name, @recipe.url, target: :_blank %>
  </h2>

  <section class="ingredients small-12 medium-6 columns">
    <h3>Ingredients:</h3>
    <h4>
      Recipe yields <%= @recipe.servings %> servings
    </h4>
    <ul>
      <% @recipe.ingredients.each do |ingredient| %>
        <li>
          <%= ingredient %>
        </li>
      <% end %>
    </ul>
  </section>

  <div class="recipe-image small-12 medium-6 columns">
    <%= image_tag @recipe.image %>
  </div>

    <br />

  <section class="nutritional-info row">
    <h4 class="small-12 columns">Nutritional Info</h4>
      <div class="small-12 small-centered columns">
        <table>

        <tr>
          <th></th>
          <th>Per Serving</th>
          <th>Percent of Daily Value</th>
        </tr>
        <tr>
          <td>Calories</td>
          <td> <%= @n_info[0] %> </td>
          <td></td>
        </tr>
        <tr>
          <td>Total Fat</td>
          <td> <%= @n_info[1] %> grams</td>
          <td> <%= @n_info[2] %>% </td>
        </tr>
        <tr>
          <td>Saturated Fat</td>
          <td> <%= @n_info[3] %> grams</td>
          <td> <%= @n_info[4] %>% </td>
        </tr>
        <tr>
          <td>Trans Fat</td>
          <td> <%= @n_info[5] %> grams</td>
          <td></td>
        </tr>
        <tr>
          <td>Sodium</td>
          <td> <%= @n_info[6] %> grams</td>
          <td> <%= @n_info[7] %>%</td>
        </tr>
        <tr>
          <td>Carbohydrates</td>
          <td> <%= @n_info[8] %> grams</td>
          <td> <%= @n_info[9] %>% </td>
        </tr>
        <tr>
          <td>Fiber</td>
          <td> <%= @n_info[10] %> grams</td>
          <td> <%= @n_info[11] %>% </td>
        </tr>
        </tr>
          <td>Sugar</td>
          <td> <%= @n_info[12] %> grams</td>
          <td></td>
        </tr>
        </tr>
          <td>Protein</td>
          <td> <%= @n_info[13] %> grams</td>
          <td> <%= @n_info[14] %>% </td>
        </tr>
      </table>

      </div>
    </section>
</article>
</div>
