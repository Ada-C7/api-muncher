<section >
  <article class="recipe-list row small-up-1 medium-up-2 large-up-3">
    <article class="title">
        <h1>Recipes for <strong><%= @search_term %></strong></h1>
    </article>
    <% @recipes.each do |recipe| %>
        <div class="frame column">
          <%= link_to image_tag(recipe.image_url, class: "food-image"), show_recipe_path(recipe.id) %>
          <h5 class="name"><%= link_to recipe.name, show_recipe_path(recipe.id) %></h5>
        </div>

    <% end %>
  </article>

  <article>
    <ul class="pagination text-center" role="navigation" aria-label="Pagination">
    <%= previous_link.html_safe %>
     <%= next_link.html_safe %>
    </ul>
  </article>
</section>
