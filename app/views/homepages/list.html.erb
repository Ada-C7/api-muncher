<h1>List of recipes</h1>

<section class="recipe-list">
  <h1>Recipes for <%= @search_term %></h1>
    <div class="masonry-css">
      <% @recipes.each do |recipe| %>
        <div class="masonry-css-item">
          <%= link_to image_tag(recipe.image_url), show_recipe_path(recipe.id) %>
          <div class="callout"><%= link_to recipe.name, show_recipe_path(recipe.id) %></div>
      </div>
      <% end %>
    </div>
  </ul>


<ul class="pagination text-center" role="navigation" aria-label="Pagination">
<%= previous_link.html_safe %>
 <%= next_link.html_safe %>
</ul>



</section>
<%= link_to "Home", root_path, class: "hollow button" %>
