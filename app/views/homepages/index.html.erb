<section id="search-field" class="input-group input-group-rounded">
  <%= form_tag(recipes_path, method: :get) do %>
    <p>
      <%= hidden_field_tag(:from, 1) %>
      <%= hidden_field_tag(:to, 10) %>
      <%= label_tag(:search, "What are you hungry for?") %>
      <%= text_field_tag :search %>
      <%= submit_tag 'Search' %>
    </p>
  <% end %>
</section>


<div class=>
  <input class="input-group-field" type="search">
  <div class="input-group-button">
    <input type="submit" class="button secondary" value="Search">
  </div>
</div>
