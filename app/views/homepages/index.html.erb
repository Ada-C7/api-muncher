<h1>DISH BISH</h1>


<%= form_tag homepages_index_path, method: "get" do %>
<%= label_tag(:search_term, "What sounds good?") %>
<%= text_field_tag(:search_term) %>
<%= submit_tag("Search") %>

<% end %>

<section class="recipes-list">
  <ul>
    <% @search_recipes.each do |recipe| %>
    <li>
      <%= link_to recipe.label, recipes_show_path %>
      <%= link_to image_tag(recipe.image), recipes_show_path %>
    </li>
    <% end %>
  </ul>
</section>
