

    <section class="search-results">

      <h2 class="recipe-list">Results for your search!</h2>

      <div class="transbox">
        <div class="row">
          <div class="col-lg-12 col-lg-5">
            <% @recipes.each do | recipe | %>

              <a class="card-title"><%=link_to recipe.label, ingredients_path + "?#{recipe.uri}"%></a>
              <a class="img-card"><%= link_to image_tag(recipe.image, :size => "400x500", :alt => "recipe photo #{recipe.label}"), ingredients_path + "?#{recipe.uri}" %></a>

            <% end %>
            </div>
          </div>
        </div>
      </section>
