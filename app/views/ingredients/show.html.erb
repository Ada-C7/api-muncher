
<section class="ingredient-list">

  <h2>The recipe you selected!</h2>

  <div class="row">
    <div class="large-12 large-centered columns">
      <div class="transbox">
        <div id="ingredients">

        <p><%=@recipe.label%></p>
        <p><%=@recipe.image%></p>
        <p><%=@recipe.ingredientLines%></p>
        <p><%=@recipe.totalNutrients%></p>
        <p>Courtesy of: <%=link_to @recipe.source, "#{@recipe.url}" %></p>

      </div>
    </div>
  </div>
</div>
</section>
