<section class="row">
<h1>Search Results</h1>
  <article class="large-12 columns">
  <% if @list_of_recipes.nil? %>

    <p> Sorry there are no results </p>
    <%= link_to "Back To Search", recipe_search_path, class: "button" %>

  <% else %>

    <% @list_of_recipes.each_with_index do |recipe, index| %>
      <div class="large-4 columns">
        <img src="<%= recipe.image_url %>"  alt="recipe: <%= index + 1 %>">
        <div><h5><%= link_to recipe.label, recipe_path(recipe.id) %></h5></div>
      </div>
    <% end %>
  <% end %>
  </article>

  <nav>
    <% next_ten = @new_search.from + 10 %>
    <%= form_tag recipes_path, method: :get do %>
      <%= hidden_field_tag :search_text, "#{@new_search.search_text}" %>
      <%= hidden_field_tag :from, next_ten %>
      <%= submit_tag "Next 10" %>
    <% end %>
  </nav>
</section>
