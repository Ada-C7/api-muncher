<section class="recipe-list">
  <%# raise %>
  <% if @data != nil %>
  <h2>Search results for '<%= "#{@query}" %>':</h2>
  <div class="row product-grid" data-equalizer data-equalize-on="medium" id="test-eq">

  <!-- <article class="row small-up-1 medium-up-3 large-up-4"> -->
    <% @data.each do |recipe| %>
        <article class="column small-12 medium-4 large-3">

        <div class="callout" data-equilizer-watch>
          <!-- link to picture -->
          <!-- <section class="column"> -->
          <%= link_to image_tag(recipe.image, :alt => "recipe photo #{recipe.label}"), show_path(recipe.uri) %></br>
          <!-- link to label -->
          <%= link_to recipe.label, show_path(recipe.uri) %></br>
          <!-- </section> -->
        </div>
      </article>
   <% end %>
  <!-- </article> -->
  </div>
  <% else %>
    <h2>Sorry, we could not find recipies matching '<%= "#{@query}" %>'</h2>
  <% end %>
</section>
