<h1>All the recipes</h1>

<% @recipes.each do |recipe| %>
  <%= link_to image_tag(recipe.image, alt: "Recipe img"), recipe_path(recipe.id, "q" => @search_term) %>
  <h4><%= recipe.name %></h4>
<% end %>

<% if (@to - 10) > 10 %>
  <%= link_to "<<", recipes_path("q" => @search_term, "to" => @to - 10, "from" => @to - 20), class: "button" %>
<% end %>

<% if @to > 10 %>
  <%= link_to ">>", recipes_path("q" => @search_term, "to" => @to, "from" => @to - 10), class: "button" %>
<% end %>
