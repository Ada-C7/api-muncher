<h1>Recipes</h1>
<!-- need a form for search here -->
<%= form_tag(root_path, method: :get) do %>
  <%= label_tag(:q, "Recipe name?") %>
  <%= text_field_tag(:q) %>
  <%= submit_tag("Search") %>
  <% end %>

<ul>
  <% if @recipes %>
<% @recipes.each do |recipe| %>
<li><%= recipe.name %></li>
  <li><%= recipe.uri %></li>
  <li><%= recipe.image %></li>
  <% end %>
  <% end %>
</ul>
