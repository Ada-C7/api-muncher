<h1>Recipes</h1>
<!-- need a form for search here -->
<%= form_tag(root_path, method: :get) do %>
<%= label_tag(:q, "Recipe name?") %>
<%= text_field_tag(:q) %>
<%= submit_tag("Search") %>
<% end %>

<section>

  <% if @recipes %>
<div class="row">
  <% @recipes_pages.each do |recipe| %>
  <div class="small-6 medium-4 large-4 columns">
  <%= link_to recipe.name, recipes_show_path(recipe.uri) %>

  <%= link_to image_tag(recipe.image), recipes_show_path(recipe.uri), class:'thumbnail' %>
</div>
  <% end %>
  <div class="row">
<%= will_paginate @recipes_pages, page_links: false %>
  <% end %>


</ul>
</div>
</div>

</section>
