<h2>Here's some recipes for (search term)</h2>

<section id="list-recipe-results">
  <% @recipes.each do | recipe | %>
    <section class="recipe-block">
      <%= image_tag recipe.image %>
      <%= recipe.uri %>
      <%= link_to recipe.name, recipe.uri %>
      <p> source: <%= recipe.recipe_source %></p>
      <%= recipe.health_labels %>
    </section>
  <% end %>
</section>
