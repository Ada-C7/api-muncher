<section class="recipes-list">

<% if @recipes %>
  <ul>
    <% @recipes.each do |recipe| %>
    <li>
      <%= link_to image_tag(recipe.image, class: "preview"), recipe_path(:label => recipe.label, :recipe_id => recipe.id) %>
      <%= link_to recipe.label, recipe_path(:label => recipe.label, :recipe_id => recipe.id) %>
    </li>
    <% end %>
    <%= paginate @recipes %>
  </ul>
<% else %>
  <p>
    Please enter a new search term above.
  </p>
<% end %>
</section>
