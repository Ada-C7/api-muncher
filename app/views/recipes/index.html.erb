<h2> Search Results </h2>

<%= form_tag(recipes_path, :method => "get") do %>
    <%= text_field_tag :search_term, params[:search_term], placeholder: "Search More Recipes" %>
    <%= submit_tag "Search", :name => nil %>
<% end %>

<div class="cardContainer">
<% @recipes.each do |recipe| %>
  <div class="card">
    <%= link_to image_tag(recipe["recipe"]["image"], onerror: 'this.error=null;this.src="https://uos.edu.pk/assets/backend/images/staff/imagenotfound.svg"', :alt => "Picture related to recipe") , recipe_path(:uri => recipe["recipe"]["uri"].tr('http://www.edamam.com/ontologies/edamam.owl#recipe_', ''), :search_term => params[:search_term]) %>
    <div class="card-section">
    <%= link_to recipe["recipe"]["label"], recipe_path(:uri => recipe["recipe"]["uri"].tr('http://www.edamam.com/ontologies/edamam.owl#recipe_', ''), :search_term => params[:search_term])%>
  </div>
</div>
  <%end%>
</div>
