<h2>Nummy recipe results for '<%= params[:search_term] %>'</h2>

<article class="row small-up-3 medium-up-5">

  <% @recipes.each do |recipe| %>
  <section class="column">
    <img src="<%=recipe.image%>" alt="<%=recipe.label%>" ><%= link_to recipe.label, recipe_path(:label => recipe.label, :uri => recipe.uri) %>
  </section>
  <% end %>
</article>
<%= will_paginate @recipes, class: "row" %>
