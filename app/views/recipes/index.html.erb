<h1>All recipes for ...</h1>

<% if @list_of_recipes.length > 0 %>
<!-- # <%= @list_of_recipes.length %> -->
<ul>
  <% @list_of_recipes.each do |recipe| %>
  <li>
    <%= link_to recipe.label, recipe_path(uri: recipe.uri) %>
    <div>
    <%= link_to image_tag(recipe.image), recipe_path(uri: recipe.uri) %>
  </div>

  </li>
  <% end %>
</ul>
<% end %>
