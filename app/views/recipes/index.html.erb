<h1>Recipes Index page</h1>

<h2>Recipe results for "<%= params[:search_term] %>"</h2>

<ul>
  <% @recipes.each do |recipe| %>
  <li>
    <img src="<%=recipe.image%>" alt="<%=recipe.label%>" ><%= link_to recipe.label, recipe_path(:label => recipe.label, :uri => recipe.uri) %>
  </li>
  <% end %>
</ul>

<%= will_paginate @recipes, class: "row" %>
