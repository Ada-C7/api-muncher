<h1>Search Results</h1>

<section class="recipes-list">

<% if @recipes %>
  <ul>
    <% @recipes.each do |recipe| %>
    <li>
      <%= link_to image_tag(recipe.image, class: "preview"), recipe_path(recipe.id) %>
      <%= link_to recipe.label, recipe_path(recipe.id) %>
    </li>
    <% end %>
  </ul>
<% else %>
  <p>
    Sorry! No recipes match that search term.
  </p>
<% end %>
</section>
