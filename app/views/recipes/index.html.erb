
<div class="row small-up-1 medium-up-2 large-up-3 text-center" id="list" >
<% if @recipes %>
  <% @recipes.each do |recipe| %>
      <div class="column column-block" class="list">
      <%= link_to image_tag(recipe.image), recipe_path(:label => recipe.label, :uri =>recipe.uri), :title => recipe.label %>
    </br><span class="title" ><%= link_to recipe.label, recipe_path(:label => recipe.label, :uri =>recipe.uri) %></span>
    </div>
  <% end  %>
<% end %>
</div>
<% if @recipes %>
  <div class="pages" >
    <%= will_paginate @recipes %>
  </div>
<% end %>
