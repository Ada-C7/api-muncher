<h2><%= @search_term.capitalize %> Recipes</h2>

<section id="search-results" class="row">
  <% if @recipes.empty? %>
    <p>Oh no! No recipes found containing "<%= @search_term %>".</p>
  <% else %>
    <ul>
      <% @recipes.each do |recipe| %>
        <li>
          <%= link_to recipe_path(uri: recipe.uri) do %>
            <%= image_tag(recipe.image_url, class: "small-img") %>
            <span><%= recipe.title %></span>
          <% end %>
        </li>
      <% end %>
    </ul>
  <% end %>

  <section id="page-links">
    <% unless @page == 1 %>
      <%= link_to "<< Previous", recipes_path(q: @search_term, page: @page - 1) %>
      <span>&nbsp;&nbsp;&bull;&nbsp;&nbsp;</span>
    <% end %>

    <%= link_to "New Search", root_path %>

    <% unless @recipes.empty? %>
      <span>&nbsp;&nbsp;&bull;&nbsp;&nbsp;</span>
      <%= link_to "Next >>", recipes_path(q: @search_term, page: @page + 1) %>
    <% end %>
  </section>
</section>
