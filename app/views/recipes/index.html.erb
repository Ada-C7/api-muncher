<p id="notice"><%= notice %></p>

<h1>Recipes</h1>


<% if @recipes.blank? %>
<h4>There are no recipes containing the term <%= params[:query] %>.</h4>
<% end %>


<% if @recipes.any? %>
  <table>
    <thead>
      <tr>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @recipes.each do |recipe| %>
      <tr>

        <td><%= link_to recipe.title, recipe_path(:id => recipe.id, :query => params[:query], :p => params[:p]) %></td>

      </tr>
      <% end %>
    </tbody>
  </table>
  <% for i in 0..9 %>
  <%= link_to i + 1, recipes_path(:query => params[:query], :p => i)   %>
  <% end %>
<% end %>
