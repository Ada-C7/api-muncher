
<h3>You have good taste! Here are some recipe ideas:</h3>

<main>
  <div class="row">
    <% @recipe_array.each do |recipe| %>
          <div class="small-3 columns" class="helper">
            <h5><%= recipe.label %></h5>
            <p><%= link_to image_tag(recipe.image), recipe_path(recipe) %></p>
          </div>
      <% end %>
  </div>
</main>
