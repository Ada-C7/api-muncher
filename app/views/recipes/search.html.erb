<h3> Search Recipes </h3>
<%= form_for :recipe do |f| %>
  <%= f.text_field :term, placeholder: "Enter ingredient here" %>
  <%= f.submit "Search Recipes" %>
  <% end %>

  <h3> Recipe List </h3>
  <ul>
    <% if @recipes != nil %>
    <% @recipes.each do |recipe| %>
    <li> <%= link_to image_tag(recipe.img_url, alt: "picture of recipe"), recipe_path(recipe.id) %></li>
    <li><%= link_to recipe.name %></li>
    <% end %>
  </ul>
  <% end %>
