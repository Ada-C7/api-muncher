<div class='row'>
  <div class='small-9 large-centered columns, recipe-list'>
    <ul>
      <% @recipes_list.each do |recipe| %>
      <li>
        <div class='row'>
          <div class='small-9 large-centered columns'>
            <%= image_tag recipe.image  %>
          </div>
        </div>
        <div class='row'>
          <div class='small-9 large-centered columns'>
            <%= link_to recipe.label, show_recipe_path(recipe.uri[43..-1]) %>
          </div>
        </div>
      </li>
      <% end %>
    </ul>
  </div>
</div>
