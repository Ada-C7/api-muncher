<section class="search-bar">
  <div class="row">

    <%= form_tag results_path, method: :get do  %>
    <div class="small-10">
    <%= label_tag(:search, "Enter Message") %>
    <%= text_field_tag(:search) %>
  </div>
  <div class="small-2">
    <%= submit_tag("Send", class: "button radius") %>
  </div>
    <% end  %>
  </div>
</section>
