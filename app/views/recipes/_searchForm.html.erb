<section class="large-12 columns, small-4 columns">
  <%= form_tag recipes_path, method: :get do %>

    <div class="search_label"><%= label_tag :Search %></div>
    <%= text_field_tag :search_text %>

    <p> Dietary Options: </p>

    <%= radio_button_tag :health, "peanut-free" %>
    <%= label_tag :health, "Peanut Free" %>
    <%= radio_button_tag :health, "tree-nut-free" %>
    <%= label_tag :health, "Tree Nut Free" %>
    <%= radio_button_tag :health, "alcohol-free" %>
    <%= label_tag :health, "Alcohol Free" %>
    <%= radio_button_tag :health, "vegan" %>
    <%= label_tag :health, "Vegan" %>
    <%= radio_button_tag :health, "vegetarian" %>
    <%= label_tag :health, "Vegetarian" %>

    <p>Macro Options: </p>
    
    <%= radio_button_tag :diet, "balanced" %>
    <%= label_tag :diet, "Balanced" %>
    <%= radio_button_tag :diet, "high-protein" %>
    <%= label_tag :diet, "High Protein" %>
    <%= radio_button_tag :diet, "low-carb" %>
    <%= label_tag :diet, "Low Carb" %>
    <%= radio_button_tag :diet, "low-fat" %>
    <%= label_tag :diet, "Low Fat" %>

    <%= hidden_field_tag :from, 0 %>
    <div><%= submit_tag "Send" %></div>
  <% end %>
</secion>
