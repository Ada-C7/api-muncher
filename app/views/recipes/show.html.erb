<h1><%= @recipe.name %></h1>
<div class="row show">
    <div class="small-12 medium-8 columns">
        <%= image_tag @recipe.image %>
    </div>
    <div class="small-12 medium-4 columns", id="ingredients">
        <h3>Ingredients</h3>
        <% @recipe.ingredients.each do |ingredient| %>
        <ul>
            <li>
                <%= ingredient %>
            </li>
        </ul>
        <% end %>
    </div>
</div>

<p id="original">
    <%= link_to "Original Recipe", @recipe.link %>
</p>

<h3>Dietary Info</h3>
<div class="row">
    <% @recipe.health_labels.each do |label| %>
    <ul>
        <li>
            <%= label %>
        </li>
    </ul>
    <% end %>
</div>
