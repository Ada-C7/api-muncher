<h3><%= @recipe.name %></h3>
<%= image_tag @recipe.image, alt:"picture of #{@recipe.name}"%>

<section>
  <h4>Ingredients:</h4>

  <ul>
    <% @recipe.ingredients.each do |ingredient| %>
      <li><%=ingredient%></li>
    <% end %>
  </ul>

</section>


<section>
  <h4>Dietary Information:</h4>
  <h5>Health Labels</h5>
  <ul>
    <% @recipe.health_labels.each do |health_label| %>
      <li><%=health_label%></li>
    <% end %>
  </ul>
</section>


<h5><%= link_to "Link to original recipe", @recipe.original_url, target: :_blank %></h5>
