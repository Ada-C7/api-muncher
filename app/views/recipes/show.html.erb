<h2><%= @recipe.name %></h2>

<%= link_to image_tag(@recipe.image, alt: "mouthwatering #{@recipe.name}"), @recipe.url%>

<% @recipe.ingredients.each do |ingredient| %>
<ul>
  <li><%= ingredient %> </li>
</ul>
<% end %>

Servings : <%= @recipe.yield %>;slider
Serving size: <%= sprintf "%.0f", @recipe.serving_size %> grams

<% @recipe.diet_info.each do |nutrient| %>
  <%= nutrient["label"]%>:
  <%=sprintf "%.0f", nutrient["quantity"]%><%=nutrient["unit"] %>
  <% unless nutrient["RDA"].nil? %>
  <%=sprintf "%.0f",nutrient["RDA"]%>%;
  <% end %>
<% end %>
