<section class="row">

  <h1 class="large-12 columns"><%= @recipe.label %></h1>
    <h4><%= link_to "Recipe Link", @recipe.original_recipe, target: :_blank %></h4>

  <div class= "large-3 columns">
    <img src="<%= @recipe.image_url %>"  alt="recipe picture">
  </div>

  <article class="recipe_results large-5 columns">
      <h3>Ingredients</h3>
        <ul>
          <% @recipe.ingredients.each do |ingredient| %>
            <li><%= ingredient %></li>
          <% end %>
        </ul>
  </article>

  <article class="recipe_results large-3 columns">
    <h3>Diets</h3>

    <!-- <ul> -->
      <% if @recipe.diets %>
        <% @recipe.diets.each do |diet| %>
          <p><%= diet %></p>
        <% end %>
      <% end %>

      <% if @recipe.health %>
        <% @recipe.health.each do |health| %>
          <p><%= health %></p>
        <% end %>

      <% else %>
        <p>There is no diet information available for this recipe</p>
      <% end %>
    <!-- </ul> -->
  </article>

  <article class="large-12 columns">
    <h3>Nutritional Facts</h3>
        <p><% @recipe.dietary_information.each do |info| %>
          <%= info[1]["label"] %>: <%= Float(info[1]["quantity"]).round(2) %> <%= info[1]["unit"] %>,
        <% end %></p>
  </article>
</section>

<nav class="search_buttons">
  <%= link_to 'Back', :back, class: "button"%>
</nav>
