<h1>Recipe</h1>
<%= @recipe.name %>
<%= @recipe.uri %>
<%= image_tag @recipe.image %>
<%= link_to 'See Recipe', @recipe.url, target: :_blank%>
<%= @recipe.r_yield %>
<% @recipe.diet_labels.each do |label| %>
<%= label %>
<% end %>
<% @recipe.health_labels.each do |label| %>
<%= label %>
<% end %>
<% @recipe.ingredients.each do |ingredient| %>
  <%= ingredient %>
  <% end %>
  <%= @recipe.calories %>


