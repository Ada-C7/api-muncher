<h1><%= link_to @recipe.label, @recipe.url, target: :_blank %></h1>

<div class="row">
<div class=""><%= link_to image_tag(@recipe.image), @recipe.url, target: :_blank %></div>
<!-- <div><%#= link_to @recipe.label, @recipe.url, target: :_blank %></div> -->
<div >
<h3>Ingredients </h3>
 <ul><% @recipe.ingredients.each do |item| %>
     <li>
       <%= item %>
     </li>
     <% end %>
</ul></div>
</div>


<h3>Allergy information</h3>

<div> <ul>
  <% if @recipe.allergy_info.count == 0 %>
    <li>
      None
    </li>
  <% else %>
    <% @recipe.allergy_info.each do |item| %>
      <li>
       <%= item %>
      </li>
    <% end %>
  <% end %>
</ul></div>

<h3>Dietery information</h3>
<div><ul>
  <% (@recipe.nutrients.keys).each do |key| %>
  <li>
    <%= @recipe.nutrients[key]["label"] %> <%= @recipe.nutrients[key]["quantity"].round(2) %> <%= @recipe.nutrients[key]["unit"] %>
  </li>
  <% end %>
</ul></div>
