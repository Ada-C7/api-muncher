<body id="recipepage">
  <main>
    <section>
      <h2><%= @recipe.label %></h2>
    </div><%= image_tag(@recipe.image) %></div></br>

    <section class="columns large-6 small-12">
      <h3>Ingredients</h3>
      <table>
        <thead>
        </thead>
        <% @recipe.ingredients.each do |ingredient| %>
        <tr>
          <td>
            <%= ingredient %>
          </td>
        </tr>
        <% end %>
      </table>
    </section>

    <section class="columns large-6 small-12">
  <h3>Nutrition</h3>
  <table>
    <thead>
      <tr>
      </tr>
    </thead>
<% @recipe.nutrition.each do |key, value| %>
  <tr>
  <td>
  <%= value["label"] %>
  </td>
  <td>
    <%= value["quantity"].floor %>
  </td>
  <td>
    <%= value["unit"] %>
  </td>
</tr>
<% end %>
</table>
</section>

    <section>
      <h3>Preparation</h3>
      <div> See full recipe on <%= link_to "#{@recipe.source} ", @recipe.url, class: "link" %></div>
    </section>



  </section>
</main>
</body>
