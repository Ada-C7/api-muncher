<section class="show">

  <h1><%= @recipe.name %></h1>
  <%# raise %>
  <div class="row">
    <div class="small-6 medium-6 large-6 columns">
      <%= image_tag @recipe.image %>
    </div>


    <article class="small-6 medium-6 large-6 columns">
      <h2>Ingredients</h2>
      <% @recipe.ingredients.each do |ingredient| %>
      <%= ingredient %>
      <% end %>
    </article>


  <article class="small-6 medium-6 large-6 columns">
    <h3><%= link_to 'See Recipe', @recipe.url, target: :_blank, class:'cite'%></h3>
      <%# @recipe.uri %>
      <h3>Dietary Information</h3>
      <% @recipe.diet_labels.each do |label| %>
      <%= label %>
      <% end %>
      <% @recipe.health_labels.each do |label| %>
      <%= label %>
      <% end %>
      <p>Serving Size: <%= @recipe.r_yield %></p>
      <p>Calories: <%= @recipe.calories %></p>

    </article>

      <%# raise %>
<div class="small-12 medium-12 large-12 columns">
      <table>
        <caption>Nutrition Information</caption>
        <% @recipe.nutrients.each do |nutrient| %>
        <tr><th>
          <%= nutrient[1]["label"]%></th>
          <td><%= nutrient[1]["quantity"].to_i %><%= nutrient[1]["unit"]%></tr></td>
          <% end %>
        </table>
      </div>
      </div>
      </section>
