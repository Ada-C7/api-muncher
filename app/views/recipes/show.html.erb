<h1><%= link_to @recipe.label, @recipe.url, target: :_blank %></h1>

<div class="row">
  <div class="small-12 medium-6 column" class="image">
    <%= link_to image_tag(@recipe.image, :class => "image"), @recipe.url, target: :_blank %>
  </div >

  <div class="small-12 medium-6 column">

  <p >
   <h3 class="text-left" class="allergy">Allergy information</h3>
     <ul class="text-left allergy_list">
      <% if @recipe.allergy_info.count == 0 %>
        <li>
          None
        </li>
      <% else %>
        <% @recipe.allergy_info.each do |item| %>
          <li>
           <%= item %>
          </li>
        <% end %>
        <% end %>
      </ul>
    </p>

    <p class="text-left">
      <!-- <%#= link_to "Click for original recipe", @recipe.url, target: :_blank %> -->
      <strong>Click image to view the original recipe.</strong>
    </p>

  </div>
</div>

<div class="row" >
  <div class="column" >
    <h3 class="text-left">Ingredients </h3>
        <ul class="text-left"><% @recipe.ingredients.each do |item| %>
            <li>
              <%= item %>
            </li>
            <% end %>
        </ul>
  </div>
</div>

<div class="row">
    <h3 class="text-left">Dietery information</h3>
    <% @recipe.nutrients.keys.in_groups(2,false).each do |group| %>
      <table class="small-12 medium-6 column">
        <% group.each do |key| %>
        <tr>
          <!-- <li class="small-up-1 medium-up-3 columns"> -->
            <td>
              <%= @recipe.nutrients[key]["label"] %></td>
             <td>
               <%= @recipe.nutrients[key]["quantity"].round(2) %>
               <%= @recipe.nutrients[key]["unit"] %></td>
        </tr>
        <% end %>
      <% end %>
      </table>
</div>
