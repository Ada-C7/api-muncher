<body class="show">

  <% if flash[:message] %>
  <h2><%=flash[:message]%></h2>

  <%else %>


  <h2 class="single-recipe"><%= @recipe.name %></h2>

  <section>
    <h4><%= link_to "Link to original recipe", @recipe.original_url, target: :_blank %></h4>
    <%= image_tag @recipe.image, alt:"picture of #{@recipe.name}"%>
  </section>

  <section>
    <h4>Ingredients:</h4>
    <ul>
      <% @recipe.ingredients.each do |ingredient| %>
      <li><%=ingredient%></li>
      <% end %>
    </ul>
  </section>


  <section>
    <h4>Dietary Information:</h4>
    <h5><%= "Calories: #{@recipe.calories_per_serving.to_i}"%></h5>
    <h5>Health labels:</h5>
    <ul>
      <% @recipe.diet_labels.each do |diet_label| %>
      <li><%=diet_label%></li>
      <% end %>
      <% @recipe.health_labels.each do |health_label| %>
      <li><%=health_label%></li>
      <% end %>
    </ul>
  </section>

  <% end %>

  <%= button_to "Return to search page", welcome_path, method: :get %>
</body>
