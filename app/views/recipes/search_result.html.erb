<body id = "searchlist">
  <main>
    <section class="row" >

<% if @recipes.length == 0 %>
<%= "No recipes match your search. Please try again!" %>
<% end %>
<% @recipes.each do |recipe| %>
      <div class="left large-3 columns">
<ul>
  <li class="recipe">

        <h6><%= link_to recipe.label, recipe_path(recipe.id) %></h6>
        <p class="image"><%= image_tag(recipe.image) %></p>
        <div>
         <%= recipe.calories.floor/recipe.yield.floor %> Calories |
         <%= recipe.ingredients.count %> Ingredients
       </div>
       <div>From
         <%= link_to "#{recipe.source} ", recipe.url, class: "link" %>
       </div>

        </li>
        </ul>
        </div>
        <% end %>
    </section>
  </main>
</body>
